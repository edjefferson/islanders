<div class = "row">

<div class ="col">
  <h2><%= image_tag("disc.svg", :alt => "Disc", :height => 32) %> Discs</h2>
<table class = "table table-striped table-sm">
<% @tracks.each do |track| %>
<tr>
  <td><%= image_tag("disc.svg", :alt => "Disc", :height => 16) %>  <%= link_to track.artist.name + " - " + track.track, track %></td>
  <td><%= track.appearances %></td>
</tr>
<% end %>
</table>
</div>
</div>
