<h2><%= image_tag("disc.svg", :alt => "Disc", :height => 32) %>  <%= link_to @track.artist.name, @track.artist %> - <%= @track.track %></h2>




<table class = "table table-striped table-sm">
  <tr>
    <th>Chosen by</th>
    <th>Chosen on</th>
  </tr>
<% @episodes.each do |episode| %>
<tr>
  <td><%= image_tag("episode.svg", :alt => "Episode", :height => 16) %>  <%= link_to episode.castaway.name, episode %></td>
  <td><%= episode.episode_date %></td>
</tr>
<% end %>
</table>
