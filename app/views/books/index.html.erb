<div class="row beach1">
  <% decades.each do |decade| %>
    <div class="col">
      <%= link_to decade, "?decade=#{decade}" %>
    </div>
  <% end %>
</div>
<div class = "row">

<div class ="col">
  <h2><%= image_tag("book.svg", :alt => "Book", :height => 32) %> Books</h2>
<table class = "table table-striped table-sm">
<% @books.each do |book| %>
<tr>
  <td><%= image_tag("book.svg", :alt => "Book", :height => 16) %> <%= link_to book.name, book %></td>
  <td><%= book.count %></td>
</tr>
<% end %>
</table>
</div>
</div>
