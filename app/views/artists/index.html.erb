<div class = "row">

<div class ="col">
  <h2><%= image_tag("artist.svg", :alt => "Artist", :height => 32) %> Artists</h2>
<table class = "table table-striped table-sm">
<% @artists.each do |artist| %>
<tr class="bar" data-background=<%= artist.appearances.to_f/@artists[0].appearances.to_f %> >
  <td class="left"><%= image_tag("artist.svg", :alt => "Artist", :height => 16) %> <%= link_to artist.name, artist %></td>
  <td class="right"><%= artist.appearances %></td>
</tr>
<% end %>
</table>
</div>
</div>
