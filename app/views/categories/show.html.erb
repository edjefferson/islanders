<div class ="row sea2"><h2><%= @category.name %></h2>
</div>

<div class="row beach1">
  <% decades.each do |decade| %>
    <div class="col">
      <%= link_to decade, "?decade=#{decade}" %>
    </div>
  <% end %>
</div>



<div class ="row">
<div class ="col">
<h3><%= image_tag("artist.svg", :alt => "Artist", :height => 32) %> Top Artists</h3>
<table class = "table table-striped table-sm">
  <tr>
    <th>Title</th>
    <th>Times Chosen</th>
  </tr>
<% @artists.each do |artist| %>
<tr>
  <td><%= image_tag("artist.svg", :alt => "Artist", :height => 16) %> <%= link_to artist.name, artist %></td>
  <td><%= artist.count %></td>
</tr>
<% end %>
</table>

<h3><%= image_tag("disc.svg", :alt => "Disc", :height => 32) %> Top Discs</h3>
<table class = "table table-striped table-sm">
  <tr>
    <th>Title</th>
    <th>Times Chosen</th>
  </tr>
<% @tracks.each do |disc| %>
<tr>
  <td><%= image_tag("disc.svg", :alt => "Disc", :height => 16) %> <%= link_to disc.name, disc %></td>
  <td><%= disc.count %></td>
</tr>
<% end %>
</table>
<h3><%= image_tag("book.svg", :alt => "Book", :height => 32) %> Top Books</h3>
<table class = "table table-striped table-sm">
  <tr>
    <th>Title</th>
    <th>Times Chosen</th>
  </tr>
<% @books.each do |book| %>
<tr>
  <td><%= image_tag("book.svg", :alt => "Book", :height => 16) %> <%= book[:name] %></td>
  <td><%= book[:appearances] %></td>
</tr>
<% end %>
</table>
</div>

<div class ="col">
  <h3>Appearances</h3>
  <table class = "table table-striped table-sm">
    <tr>
      <th>Guest</th>
      <th>Appearance Date</th>
    </tr>
  <% @episodes.each do |episode| %>
  <tr>
    <td><%= image_tag("episode.svg", :alt => "Episode", :height => 16) %> <%= link_to episode.castaway.name, episode %></td>
    <td><%= episode.episode_date %></td>
  </tr>
  <% end %>
  </table>

</div>
</div>
