<div class = "row">

<div class ="col">
  <h2><%= image_tag("disc.svg", :alt => "Disc", :height => 32) %> Discs</h2>
<table class = "table table-striped table-sm">
<% @discs.each do |disc| %>
<tr class="bar" data-background=<%= disc.appearances.to_f/@discs[0].appearances.to_f %>>
  <td class="left"><%= image_tag("disc.svg", :alt => "Disc", :height => 16) %>  <%= link_to disc.artist.name + " - " + disc.name, disc %></td>
  <td class="right"><%= disc.appearances %></td>
</tr>
<% end %>
</table>
</div>
</div>
