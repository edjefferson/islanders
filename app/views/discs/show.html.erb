<h2><%= image_tag("disc.svg", :alt => "Disc", :height => 32) %>  <%= link_to @disc.artist.name, @disc.artist %> - <%= @disc.name %></h2>

<%= line_chart @all_chart_data, @chart_options%>



<table class = "table table-striped table-sm">
  <tr>
    <th>Chosen by</th>
    <th>Chosen on</th>
    <th>Order</th>
  </tr>
<% @episodes.each do |episode| %>
<tr>
  <td class="left"><%= image_tag("episode.svg", :alt => "Episode", :height => 16) %>  <%= link_to episode.castaway.name, episode %></td>
  <td class="right"><%= episode.episode_date %></td>
  <td class="right"><%= disc_order(episode,@disc) %></td>
</tr>
<% end %>
</table>
